<h1><%= @store.name() %></h1>
<ul>
  <li><strong>Address:</strong>
    <% if @store.address().!=("\n, ").&(@store.address().!=('')) %>
    <%= @store.address() %>
    <% else %>
    no address given
    <% end %>
  </li>
  <li><strong>Phone:</strong>
    <% if @store.phone().!=('') %>
    <%= @store.phone() %>
    <% else %>
    no phone number given
    <% end %>
  </li>
</ul>

<ul>
  <li><a href='/stores/<%= @store.id() %>/edit'>Update Store Information</a></li>
  <li><a href='/stores'>Back to Stores</a></li>
  <li><a href='/stores/new'>Add a New Store</a></li>
</ul>
