<h1><%= @store.name() %></h1>
<ul>
  <li><strong>Address:</strong>
    <% if @store.address().!=("\n, ").&(@store.address().!=('')) %>
    <%= @store.address() %>
    <% else %>
    no address given
    <% end %>
  </li>
  <li><strong>Phone:</strong>
    <% if @store.phone().!=('') %>
    <%= @store.phone() %>
    <% else %>
    no phone number given
    <% end %>
  </li>
</ul>
<% if @store.brands.any? %>
  <h3>Brands Available at <%= @store.name() %>:</h3>
  <ul>
    <% @store.brands.each() do |brand| %>
    <li><%= brand.name() %></li>
    <% end %>
  </ul>
  <% else %>
  <p><strong>There are currently no brands assigned to this store.</strong></p>
  <br>
  <% end %>
<ul>
  <li><a href='/stores/<%= @store.id() %>/edit'>Update Store Information</a></li>
  <li><a href='/stores'>Back to Stores</a></li>
  <li><a href='/stores/new'>Add a New Store</a></li>
</ul>
